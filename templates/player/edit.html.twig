  {% endset %}

  {% set body %}
    {{ include('player/_form.html.twig', { form: form, button_label: 'Mettre à jour' }) }}
    <div class="am-formActions">
      {{ include('player/_delete_form.html.twig') }}
    </div>
  {% endset %}

  {{ include('_ui/page_card.html.twig', {
    title: 'Modifier joueur',
    subtitle: 'Mettre à jour les informations',
    actions: actions,
    body: body
  }) }}
