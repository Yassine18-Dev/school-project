{% extends 'base.html.twig' %}

{% block title %}D√©tails Tournoi - ArenaMind{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card bg-dark text-white border-0 shadow-lg" style="width: 100%; max-width: 600px; border-radius: 20px;">
        <div class="card-header bg-transparent border-bottom border-secondary p-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0 fw-bold" style="color: var(--accent-purple);">üèÜ D√©tails du Tournoi</h2>
                <span class="badge bg-dark border border-secondary text-muted">ID #{{ tournoi.id }}</span>
            </div>
        </div>
        
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-2">{{ tournoi.nom }}</h1>
                {% if tournoi.jeu %}
                    <span class="badge rounded-pill px-3 py-2 bg-primary bg-opacity-25 text-primary border border-primary border-opacity-25 fs-6">
                        <i class="fa-solid fa-gamepad me-2"></i> {{ tournoi.jeu.nom }}
                    </span>
                {% endif %}
            </div>

            <div class="row g-3">
                <div class="col-12">
                    <div class="p-3 rounded-3" style="background-color: rgba(255,255,255,0.05);">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3 text-warning">
                                <i class="fa-regular fa-calendar-alt fa-lg"></i>
                            </div>
                            <div>
                                <h6 class="text-muted small mb-1 text-uppercase ls-1">Date de d√©but</h6>
                                <div class="fw-bold fs-5">{{ tournoi.dateDebut ? tournoi.dateDebut|date('d F Y √† H:i') : 'Date non d√©finie' }}</div>
                            </div>
                        </div>
                    </div>
                </div>
                {# Add more fields here as needed #}
            </div>
        </div>
        
        <div class="card-footer bg-transparent border-top border-secondary p-4">
            <div class="d-flex justify-content-between gap-2">
                <a href="{{ path('app_tournoi_index') }}" class="btn btn-outline-light">
                    <i class="fa-solid fa-arrow-left"></i> Retour
                </a>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_tournoi_edit', {'id': tournoi.id}) }}" class="btn btn-warning fw-bold">
                        <i class="fa-solid fa-pen"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('app_tournoi_delete', {'id': tournoi.id}) }}" onsubmit="return confirm('Supprimer ce tournoi ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
                        <button class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
</style>
{% endblock %}