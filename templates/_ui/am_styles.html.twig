<style>
  :root{
    --am-bg: #0B1020;
    --am-card: rgba(255,255,255,.06);
    --am-border: rgba(255,255,255,.12);
    --am-text: rgba(255,255,255,.92);
    --am-muted: rgba(255,255,255,.62);
    --am-primary: #7C3AED;
    --am-primary-2: #22D3EE;
  }

  .am-page{
    min-height: calc(100vh - 80px);
    padding: 32px 16px;
    background:
      radial-gradient(900px 500px at 15% 10%, rgba(124,58,237,.28), transparent 55%),
      radial-gradient(900px 500px at 85% 15%, rgba(34,211,238,.22), transparent 55%),
      linear-gradient(180deg, #0b1020 0%, #070a13 100%);
  }

  .am-shell{ max-width: 1100px; margin: 0 auto; }

  .am-card{
    background: var(--am-card);
    border: 1px solid var(--am-border);
    border-radius: 18px;
    box-shadow: 0 18px 60px rgba(0,0,0,.35);
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .am-card__header{
    padding: 18px 18px 0 18px;
    display:flex; align-items:flex-start; justify-content:space-between; gap:12px;
  }

  .am-title{ color: var(--am-text); font-weight: 800; font-size: 22px; line-height: 1.2; margin:0; }
  .am-subtitle{ color: var(--am-muted); margin-top: 6px; font-size: 13px; }

  .am-card__body{ padding: 18px; }

  .am-actions{ display:flex; gap:10px; flex-wrap:wrap; justify-content:flex-end; }

  .am-btn{
    display:inline-flex; align-items:center; gap:8px;
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid var(--am-border);
    color: var(--am-text);
    text-decoration:none;
    background: rgba(255,255,255,.04);
    transition: transform .08s ease, background .2s ease, border-color .2s ease;
    font-weight: 700;
    font-size: 13px;
  }
  .am-btn:hover{ background: rgba(255,255,255,.08); transform: translateY(-1px); }
  .am-btn--primary{
    border-color: rgba(124,58,237,.5);
    background: linear-gradient(135deg, rgba(124,58,237,.45), rgba(34,211,238,.25));
  }

  .am-table{
    width:100%;
    border-collapse: collapse;
    overflow:hidden;
    border-radius: 14px;
    border: 1px solid var(--am-border);
    background: rgba(0,0,0,.18);
  }
  .am-table th, .am-table td{
    padding: 12px 12px;
    border-bottom: 1px solid rgba(255,255,255,.08);
    color: var(--am-text);
    font-size: 13px;
    vertical-align: middle;
  }
  .am-table th{
    color: rgba(255,255,255,.80);
    font-weight: 800;
    background: rgba(255,255,255,.03);
    text-align:left;
    white-space: nowrap;
  }
  .am-table tr:last-child td{ border-bottom: none; }
  .am-muted{ color: var(--am-muted); }

  .am-toolbar{
    display:flex; gap:10px; align-items:center; justify-content:space-between;
    margin: 0 0 14px 0; flex-wrap:wrap;
  }
  .am-input{
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid var(--am-border);
    background: rgba(0,0,0,.22);
    color: var(--am-text);
    min-width: 260px;
    outline: none;
  }
  .am-input::placeholder{ color: rgba(255,255,255,.45); }
  .am-pill{
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid var(--am-border);
    background: rgba(255,255,255,.04);
    color: rgba(255,255,255,.85);
    font-size: 12px;
    font-weight: 700;
  }
</style>
