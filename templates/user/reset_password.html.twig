{% extends 'front/base_front.html.twig' %}
{% block title %}Nouveau Mot de passe - ArenaMind{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0" style="background-color: #15192b; border-radius: 20px; box-shadow: 0 0 40px rgba(136, 51, 255, 0.2);">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fa-solid fa-key fa-3x mb-3" style="color: #8833ff;"></i>
                        <h2 class="fw-bold">Nouveau mot de passe</h2>
                    </div>

                    {% if not valid is defined or not valid %}
                        <div class="alert alert-danger text-center">
                            <i class="fa-solid fa-circle-exclamation me-2"></i> Lien invalide ou expiré.
                        </div>
                        <div class="text-center mt-3">
                            <a href="{{ path('ui_forgot_password') }}" class="btn btn-outline-light rounded-pill">
                                Demander un nouveau lien
                            </a>
                        </div>
                    {% else %}
                        <p class="text-secondary text-center mb-4">Choisissez un mot de passe sécurisé</p>

                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-lock me-1"></i> Nouveau mot de passe
                                </label>
                                <input type="password" name="password" class="form-control bg-dark text-white border-secondary rounded-pill px-4 py-3"
                                       placeholder="••••••••" required autofocus>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-check-double me-1"></i> Confirmer
                                </label>
                                <input type="password" name="password_confirm" class="form-control bg-dark text-white border-secondary rounded-pill px-4 py-3"
                                       placeholder="••••••••" required>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 rounded-pill py-3 fw-bold">
                                <i class="fa-solid fa-pen-nib me-2"></i> Mettre à jour
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
