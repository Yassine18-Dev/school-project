{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white fw-bold">ðŸŽ® BibliothÃ¨que des Jeux</h1>
            <p class="text-muted small">GÃ©rez votre collection de jeux pour les tournois.</p>
        </div>
        <a href="{{ path('app_jeu_new') }}" class="btn btn-primary rounded-pill px-4 fw-bold" style="background-color: var(--accent-purple); border: none;">
            <i class="fa-solid fa-plus me-2"></i> Ajouter un jeu
        </a>
    </div>

    <div class="card border-0 shadow-lg overflow-hidden" style="background-color: #1a1d26; border-radius: 15px;">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead style="background-color: rgba(136, 51, 255, 0.1);">
                    <tr class="text-uppercase small text-muted">
                        <th class="py-3 ps-4">Jeu</th>
                        <th class="py-3">Description</th>
                        <th class="py-3 text-center">ID</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for jeu in jeus %}
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-3 overflow-hidden me-3" style="width: 50px; height: 50px; border: 1px solid rgba(255,255,255,0.1);">
                                    <img src="{{ jeu.image }}" 
                                         alt="{{ jeu.nom }}" 
                                         class="w-100 h-100 object-fit-cover"
                                         onerror="this.src='https://placehold.co/50x50/1a1d26/white?text=ðŸŽ®'">
                                </div>
                                <span class="fw-bold text-white">{{ jeu.nom }}</span>
                            </div>
                        </td>
                        <td class="text-muted small">
                            {{ jeu.description|length > 60 ? jeu.description|slice(0, 60) ~ '...' : jeu.description }}
                        </td>
                        <td class="text-center text-muted small">#{{ jeu.id }}</td>
                        <td class="text-end pe-4">
                            <div class="btn-group">
                                <a href="{{ path('app_jeu_show', {'id': jeu.id}) }}" class="btn btn-sm btn-icon btn-outline-light border-0" title="Voir">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('app_jeu_edit', {'id': jeu.id}) }}" class="btn btn-sm btn-icon btn-outline-light border-0" title="Modifier">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="mb-3 display-4 opacity-50">ðŸŽ®</div>
                            <p>Aucun jeu disponible.</p>
                            <a href="{{ path('app_jeu_new') }}" class="btn btn-outline-primary btn-sm rounded-pill mt-2">Ajouter un premier jeu</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}