{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier {{ tournoi.nom }} ‚Ä¢ ArenaMind{% endblock %}

{% block body %}
    <div style="margin-bottom: 30px;">
        <a href="{{ path('app_tournoi_index') }}" style="color: var(--muted); text-decoration: none; font-size: 0.9rem;">‚Üê Annuler la modification</a>
        <h1 style="margin-top: 10px;">‚öôÔ∏è Modifier le tournoi</h1>
    </div>

    <div style="background: rgba(255, 255, 255, 0.02); border: 1px solid var(--border); border-radius: 20px; padding: 30px; max-width: 800px;">
        
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div style="margin-bottom: 25px;">
                {{ form_label(form.nom, "Nom de la comp√©tition", {'label_attr': {'style': 'display: block; margin-bottom: 8px; color: var(--purple); font-weight: 600;'}}) }}
                {{ form_widget(form.nom) }}
                <div style="color: #ff4d4d; font-size: 13px; margin-top: 6px; font-weight: 500;">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div style="margin-bottom: 25px;">
                {{ form_label(form.dateTournoi, "Date et Heure", {'label_attr': {'style': 'display: block; margin-bottom: 8px; color: var(--purple); font-weight: 600;'}}) }}
                {{ form_widget(form.dateTournoi) }}
                <div style="color: #ff4d4d; font-size: 13px; margin-top: 6px; font-weight: 500;">
                    {{ form_errors(form.dateTournoi) }}
                </div>
            </div>

            <div style="margin-bottom: 35px;">
                {{ form_label(form.jeu, "Jeu associ√©", {'label_attr': {'style': 'display: block; margin-bottom: 8px; color: var(--purple); font-weight: 600;'}}) }}
                {{ form_widget(form.jeu) }}
                <div style="color: #ff4d4d; font-size: 13px; margin-top: 6px; font-weight: 500;">
                    {{ form_errors(form.jeu) }}
                </div>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; border-top: 1px solid var(--border); padding-top: 25px;">
                <div style="display: flex; gap: 15px;">
                    <button type="submit" class="btn">üíæ Enregistrer les modifications</button>
                    {{ include('tournoi/_delete_form.html.twig') }}
                </div>
                <span style="color: var(--muted); font-size: 0.8rem;">ID: #{{ tournoi.id }}</span>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}