{% extends 'front/base_front.html.twig' %}
{% block title %}Modifier Profil - ArenaMind{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0" style="background-color: #15192b; border-radius: 20px; box-shadow: 0 0 40px rgba(136, 51, 255, 0.2);">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="fa-solid fa-user-pen fa-3x mb-3" style="color: #8833ff;"></i>
                        <h2 class="fw-bold">Modifier mon profil</h2>
                        <p class="text-secondary">Mettez √† jour vos informations personnelles</p>
                    </div>

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <form method="post">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-user me-1"></i> Nom d'utilisateur
                                </label>
                                <input type="text" name="username" class="form-control bg-dark text-white border-secondary rounded-pill px-4 py-3"
                                       value="{{ user.username }}" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-envelope me-1"></i> Email
                                </label>
                                <input type="email" name="email" class="form-control bg-dark text-white border-secondary rounded-pill px-4 py-3"
                                       value="{{ user.email }}" required>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-gamepad me-1"></i> Jeu Favori
                                </label>
                                <select name="favoriteGame" class="form-select bg-dark text-white border-secondary rounded-pill px-4 py-3">
                                    <option value="" {% if not user.favoriteGame %}selected{% endif %}>Choisir un jeu...</option>
                                    <option value="FIFA" {% if user.favoriteGame == 'FIFA' %}selected{% endif %}>‚öΩ EA Sports FC (FIFA)</option>
                                    <option value="LoL" {% if user.favoriteGame == 'LoL' %}selected{% endif %}>‚öîÔ∏è League of Legends</option>
                                    <option value="Valorant" {% if user.favoriteGame == 'Valorant' %}selected{% endif %}>üî´ Valorant</option>
                                    <option value="CS2" {% if user.favoriteGame == 'CS2' %}selected{% endif %}>üí£ Counter-Strike 2</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    <i class="fa-solid fa-quote-left me-1"></i> Bio
                                </label>
                                <textarea name="bio" class="form-control bg-dark text-white border-secondary rounded-4 px-4 py-3" rows="4"
                                          placeholder="Parlez-nous de vous...">{{ user.bio }}</textarea>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-5">
                            <a href="{{ path('ui_profile') }}" class="btn btn-outline-light rounded-pill px-4 py-2">
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
