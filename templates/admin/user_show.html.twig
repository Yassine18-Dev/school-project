{% extends 'base.html.twig' %}
{% block title %}Admin • User #{{ u.id }}{% endblock %}
{% block container_class %}wide{% endblock %}

{% block body %}
<h1>User Details</h1>
<p class="subtitle">Admin view (UI-only)</p>

<p><strong>ID:</strong> {{ u.id }}</p>
<p><strong>Username:</strong> {{ u.username }}</p>
<p><strong>Email:</strong> {{ u.email }}</p>
<p><strong>Role:</strong> <span class="badge">{{ u.role }}</span></p>
<p><strong>Status:</strong> <span class="badge">{{ u.status }}</span></p>

<div style="margin-top:18px;">
    <a class="badge" href="/admin/users?as=admin&action=activate&id={{ u.id }}">✅ Activate</a>
    <a class="badge" href="/admin/users?as=admin&action=suspend&id={{ u.id }}">⏸ Suspend</a>
    <a class="badge" href="/admin/users?as=admin&action=ban&id={{ u.id }}">⛔ Ban</a>
</div>

<div class="link">
    <a href="/admin/users?as=admin">Back to users</a>
</div>
{% endblock %}
