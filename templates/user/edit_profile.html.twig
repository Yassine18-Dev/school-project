{% extends 'base.html.twig' %}
{% block title %}Edit Profile{% endblock %}

{% block body %}
<h1>Edit Profile</h1>
<p class="subtitle">UI-only editing (DB later).</p>

<form method="post">
    <label>Username</label>
    <input name="username" value="{{ user.username }}" required>

    <label>Email</label>
    <input type="email" name="email" value="{{ user.email }}" required>

    <label>Favorite Game</label>
    <select name="favoriteGame">
        <option {% if user.favoriteGame == 'FIFA' %}selected{% endif %}>FIFA</option>
        <option {% if user.favoriteGame == 'LoL' %}selected{% endif %}>LoL</option>
        <option {% if user.favoriteGame == 'Valorant' %}selected{% endif %}>Valorant</option>
    </select>

    <label>Bio</label>
    <input name="bio" value="{{ user.bio }}">

    <button>Save Changes</button>
</form>

<div class="link">
    <a href="/profile">Back to profile</a>
</div>
{% endblock %}
