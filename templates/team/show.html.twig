{% extends 'layouts/arenamind.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
  <div class="am-wrap">
    <div class="am-card">
      <div class="am-card__header">
        <div>
          <h1 class="am-title">{{ team.name }}</h1>
          <p class="am-subtitle">Profil team</p>

          {% if team.logo %}
            <div style="margin-top:10px;">
              <img src="{{ team.logo }}" alt="logo" style="height:56px;border-radius:12px;">
            </div>
          {% endif %}

          {% if team.bio %}
            <p style="margin-top:10px;opacity:.9;">{{ team.bio }}</p>
          {% endif %}
        </div>

        <div class="am-actions">
          <a class="am-btn am-btn--primary" href="{{ path('app_team_members', {id: team.id}) }}">GÃ©rer joueurs</a>
          <a class="am-btn" href="{{ path('app_team_edit', {id: team.id}) }}">Edit</a>
          <a class="am-btn" href="{{ path('app_team_index') }}">Back</a>
        </div>
      </div>

      <div class="am-card__body">
        <h3 class="am-h3">Membres</h3>

        <table class="am-table">
          <thead>
            <tr>
              <th>ID</th><th>Username</th><th>Email</th><th>RoleType</th><th>Status</th>
            </tr>
          </thead>
          <tbody>
            {% for u in team.members %}
              <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.username }}</td>
                <td>{{ u.email }}</td>
                <td>{{ u.roleType }}</td>
                <td>{{ u.status }}</td>
              </tr>
            {% else %}
              <tr><td colspan="5" class="am-empty">Aucun membre.</td></tr>
            {% endfor %}
          </tbody>
        </table>

        <form method="post" action="{{ path('app_team_delete', {'id': team.id}) }}" onsubmit="return confirm('Supprimer cette team ?');" style="margin-top:16px;">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
          <button class="am-btn am-btn--danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
