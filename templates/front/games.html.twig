{% extends 'front/base_front.html.twig' %}

{% block title %}Jeux - ArenaMind{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-3">Nos Jeux Officiels</h1>
        <p class="text-secondary lead">SÃ©lectionnez votre champ de bataille.</p>
    </div>

    <div class="row g-4">
        {% for game in games %}
            <div class="col-md-6 col-lg-4">
                <div class="card bg-card border-0 h-100 shadow-sm hover-up transition">
                    <div class="card-img-top overflow-hidden position-relative" style="height: 200px;">
                        {% if game.image %}
                            <img src="{{ game.image }}" class="w-100 h-100 object-fit-cover" alt="{{ game.nom }}">
                        {% else %}
                            <div class="w-100 h-100 bg-dark d-flex align-items-center justify-content-center text-secondary">
                                <i class="fa-solid fa-image fa-3x"></i>
                            </div>
                        {% endif %}
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-primary">Populaire</span>
                        </div>
                    </div>
                    <div class="card-body p-4 d-flex flex-col flex-grow-1 flex-column">
                        <h3 class="h5 fw-bold mb-2">{{ game.nom }}</h3>
                        <p class="text-muted small mb-4 line-clamp-3 flex-grow-1">
                            {{ game.description|slice(0, 100) }}...
                        </p>
                        <a href="{{ path('app_front_tournaments') }}" class="btn btn-outline-light w-100 rounded-pill">
                            Voir les tournois
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <p class="text-muted">Aucun jeu disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .hover-up { transition: transform 0.3s ease; }
    .hover-up:hover { transform: translateY(-5px); }
</style>
{% endblock %}
