{% extends 'front/base_front.html.twig' %}
{% block title %}Profile{% endblock %}

{% block body %}
<h1>My Profile</h1>
<p class="subtitle">Personal information</p>

<p><strong>Username:</strong> {{ user.username }}</p>
<p><strong>Email:</strong> {{ user.email }}</p>

<div style="margin:14px 0">
  <span class="badge">Role: {{ user.roleType }}</span>
  <span class="badge">Status: {{ user.status }}</span>
</div>

<p class="subtitle">
  Registered: {{ user.createdAt|date('Y-m-d H:i') }}<br>
  Last activity: {{ user.lastActivityAt ? user.lastActivityAt|date('Y-m-d H:i') : 'â€”' }}
</p>

<div class="link">
  <a href="{{ path('ui_profile_edit') }}">Edit profile</a>
</div>
{% endblock %}
